name: Trigger Jenkins Build

on:
  push:
    branches:
      - your-branch

jobs:
  trigger-jenkins-build:
    runs-on: ubuntu-latest

    steps:
      - name: Trigger Jenkins Build
        uses: appleboy/jenkins-action@master
        with:
          url: 'http://your-jenkins-server:port/jenkins' # Replace with your Jenkins server URL
          job: 'Your_Jenkins_Pipeline_Name' # Replace with your Jenkins pipeline job name
          token: ${{ secrets.JENKINS_TOKEN }} # Create a GitHub secret for your Jenkins token
